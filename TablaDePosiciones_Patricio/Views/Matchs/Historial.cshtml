@model IEnumerable<TablaDePosiciones_Patricio.ViewModels.ViewMatchs.HistorialViewModel>

@{
    ViewData["Title"] = "Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Historial</h1>

<div>
    <hr />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-dark">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.HomeTeamName)</td>
                    <td>@Html.DisplayNameFor(m => m.HomePoints)</td>
                    <td>Vs</td>
                    <td>@Html.DisplayNameFor(m => m.GuestPoints)</td>
                    <td>@Html.DisplayNameFor(m => m.GuestTeamName)</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HomeTeamName</td>
                        <td>@item.HomePoints</td>
                        <td>Vs</td>
                        <td>@item.GuestPoints</td>
                        <td>@item.GuestTeamName</td>
                        <td>                                                                            
                            <a asp-controller="Matchs" asp-action="EditMatch" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar</a>                                                                                                          
                            <a asp-controller="Matchs" asp-action="DeleteMatch" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
    }
    else
    {
        <p>No existen registros</p>
    }
</div>
<div>
    <a class="text-dark" asp-controller="TeamsRegistration"  asp-action="Index"><strong>Volver atras</strong></a>
</div>
