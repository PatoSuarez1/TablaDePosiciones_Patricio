<!--en @@model se usa para informar sobre que modelo vamos a estar trabajando-->
@model IEnumerable<TablaDePosiciones_Patricio.Models.Team>

@{
    ViewData["Title"] = "Lista de Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<div class="container">
    <!--Con este If mostramos el cartel de mensaje-->
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

   <div class="row">
       <div class="col-sm-6">
           <h3>Lista de Equipos</h3>
       </div>
       <div class="col-sm-6">
           <a class="btn btn-outline-secondary d-block" asp-action="create" asp-controller="Teams">Agregar nuevo equipo</a>
       </div>
   </div>
    <hr />
   <div class="row">

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped table-dark">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Name)</td>
                        <td>@Html.DisplayNameFor(m => m.Captain)</td>
                        <td>@Html.DisplayNameFor(m => m.Foundation)</td>
                        <td>@Html.DisplayNameFor(m => m.Location)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Captain</td>
                            <td>@item.Foundation</td>
                            <td>@item.Location</td>
                            <td>                                                                            
                                <a asp-controller="Teams" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Editar</a>
                                                                                                          
                                <a asp-controller="Teams" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
</div>